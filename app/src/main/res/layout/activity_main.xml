    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vc.zz.qduxsh.alxrecyclerview.MainActivity">

    <vc.zz.qduxsh.alxrecyclerview.AlxRefreshLoadMoreRecyclerView
        android:id="@+id/alx_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
